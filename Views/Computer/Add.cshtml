@model MvcLabManager.Models.Computer
@{
    ViewData["Title"] = "Cadastrar Computador";
}
<h1>@ViewData["Title"]</h1>
<p>Utilize o formul√°rio para Cadastrar um Computador</p>

<form class="form" asp-controller="Computer" asp-action="Add" method="POST">

    <label for="Ram">Ram</label>
    <input type="text" id="Ram" name="Ram" asp-for="@Model.Ram">
    <span asp-validation-for="@Model.Ram" class="text-danger"></span>

    <label for="Processor">Processor</label>
    <input type="text" id="Processor" name="Processor" asp-for="@Model.Processor">
    <span asp-validation-for="@Model.Processor" class="text-danger"></span>

    <input class="submit" type="submit" value="Adicionar">
</form>